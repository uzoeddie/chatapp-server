{
  "name": "chatapp-server",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production pm2 start ./build/app.js -i 5 --watch | ./node_modules/.bin/bunyan",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts | ./node_modules/.bin/bunyan",
    "lint:check": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "prettier:check": "prettier --check 'src/**/*.{ts,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,json}'",
    "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false",
    "build": "ttsc -p .",
    "seeds:dev": "npx ts-node src/seeds.ts",
    "seeds:prod": "node ./build/seeds.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/express": "^4.0.0",
    "@bull-board/ui": "^4.0.0",
    "@sendgrid/mail": "^7.7.0",
    "@socket.io/redis-adapter": "^7.2.0",
    "@types/bull": "^3.15.8",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.8.4",
    "bunyan": "^1.8.15",
    "canvas": "^2.9.3",
    "cloudinary": "^1.30.0",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "ioredis-mock": "^8.2.2",
    "ip": "^1.1.8",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "mongoose": "^6.4.1",
    "nodemailer": "^6.7.5",
    "redis": "^4.2.0",
    "socket.io": "^4.5.1",
    "swagger-stats": "^0.99.2",
    "ttypescript": "^1.5.13",
    "typescript-transform-paths": "^3.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bunyan": "^1.8.8",
    "@types/compression": "^1.7.2",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^28.1.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/mongodb": "^4.0.7",
    "@types/nodemailer": "^6.4.4",
    "@types/swagger-stats": "^0.95.5",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": false,
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/test/*.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/test/*.ts?(x)",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 1,
        "functions": 1,
        "lines": 1,
        "statements": 1
      }
    },
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.redis-mock.js"
    ],
    "moduleNameMapper": {
      "@user/(.*)": [
        "<rootDir>/src/features/user/$1"
      ],
      "@post/(.*)": [
        "<rootDir>/src/features/posts/$1"
      ],
      "@comment/(.*)": [
        "<rootDir>/src/features/comments/$1"
      ],
      "@reaction/(.*)": [
        "<rootDir>/src/features/reactions/$1"
      ],
      "@chat/(.*)": [
        "<rootDir>/src/features/chat/$1"
      ],
      "@image/(.*)": [
        "<rootDir>/src/features/images/$1"
      ],
      "@notification/(.*)": [
        "<rootDir>/src/features/notifications/$1"
      ],
      "@follower/(.*)": [
        "<rootDir>/src/features/followers/$1"
      ],
      "@global/(.*)": [
        "<rootDir>/src/shared/globals/$1"
      ],
      "@service/(.*)": [
        "<rootDir>/src/shared/services/$1"
      ],
      "@socket/(.*)": [
        "<rootDir>/src/shared/sockets/$1"
      ],
      "@worker/(.*)": [
        "<rootDir>/src/shared/workers/$1"
      ],
      "@root/(.*)": [
        "<rootDir>/src/$1"
      ]
    }
  }
}
