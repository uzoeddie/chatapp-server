{
    "name": "chatapp-server",
    "version": "1.0.0",
    "description": "",
    "main": "app.js",
    "scripts": {
        "start": "NODE_ENV=production pm2 start ./build/app.js -i 5 --watch | ./node_modules/.bin/bunyan",
        "dev": "nodemon -r tsconfig-paths/register src/app.ts | ./node_modules/.bin/bunyan",
        "lint:check": "eslint 'src/**/*.ts'",
        "lint:fix": "eslint 'src/**/*.ts' --fix",
        "prettier:check": "prettier --check 'src/**/*.{ts,json}'",
        "prettier:fix": "prettier --write 'src/**/*.{ts,json}'",
        "test": "jest --coverage=false -w=1 --forceExit --detectOpenHandles",
        "build": "ttsc -p ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@sendgrid/mail": "^7.4.2",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "axios": "^0.21.1",
        "bcryptjs": "^2.4.3",
        "bull": "^3.22.4",
        "bull-board": "^2.0.1",
        "bunyan": "^1.8.15",
        "cloudinary": "^1.25.1",
        "compression": "^1.7.4",
        "cookie-session": "^1.4.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "flat": "^5.0.2",
        "helmet": "^4.5.0",
        "hpp": "^0.2.3",
        "http-status-codes": "^2.1.4",
        "jimp": "^0.16.1",
        "joi": "^17.4.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "mongoose": "^5.12.5",
        "nodemailer": "^6.6.0",
        "prom-client": "^12.0.0",
        "public-ip": "^4.0.3",
        "redis": "^3.1.2",
        "socket.io": "^4.1.2",
        "socket.io-redis": "^6.1.1",
        "swagger-stats": "^0.99.1",
        "ttypescript": "^1.5.12"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/bull": "^3.15.1",
        "@types/bull-board": "^0.6.0",
        "@types/bunyan": "^1.8.6",
        "@types/compression": "^1.7.0",
        "@types/cookie-session": "^2.0.42",
        "@types/cors": "^2.8.10",
        "@types/ejs": "^3.0.6",
        "@types/express": "^4.17.11",
        "@types/flat": "^5.0.1",
        "@types/hpp": "^0.2.1",
        "@types/jest": "^26.0.23",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/lodash": "^4.14.168",
        "@types/mongodb": "^3.6.12",
        "@types/nodemailer": "^6.4.1",
        "@types/redis": "^2.8.28",
        "@types/swagger-stats": "^0.95.3",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "coveralls": "^3.1.0",
        "eslint": "^7.25.0",
        "jest": "^27.0.3",
        "prettier": "^2.2.1",
        "redis-mock": "^0.56.3",
        "ts-jest": "^27.0.2",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "verbose": false,
        "coverageDirectory": "coverage",
        "collectCoverage": true,
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "testMatch": [
            "<rootDir>/src/**/test/*.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/test/*.ts?(x)",
            "!**/node_modules/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 1,
                "functions": 1,
                "lines": 1,
                "statements": 1
            }
        },
        "coverageReporters": [
            "text-summary",
            "lcov"
        ],
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "setupFilesAfterEnv": [
            "./jest.setup.redis-mock.js"
        ],
        "moduleNameMapper": {
            "@user/(.*)": [
                "<rootDir>/src/features/user/$1"
            ],
            "@post/(.*)": [
                "<rootDir>/src/features/posts/$1"
            ],
            "@comment/(.*)": [
                "<rootDir>/src/features/comments/$1"
            ],
            "@reaction/(.*)": [
                "<rootDir>/src/features/reactions/$1"
            ],
            "@chat/(.*)": [
                "<rootDir>/src/features/chat/$1"
            ],
            "@image/(.*)": [
                "<rootDir>/src/features/images/$1"
            ],
            "@notification/(.*)": [
                "<rootDir>/src/features/notifications/$1"
            ],
            "@follower/(.*)": [
                "<rootDir>/src/features/followers/$1"
            ],
            "@global/(.*)": [
                "<rootDir>/src/shared/globals/$1"
            ],
            "@service/(.*)": [
                "<rootDir>/src/shared/services/$1"
            ],
            "@socket/(.*)": [
                "<rootDir>/src/shared/sockets/$1"
            ],
            "@worker/(.*)": [
                "<rootDir>/src/shared/workers/$1"
            ],
            "@root/(.*)": [
                "<rootDir>/src/$1"
            ]
        }
    }
}
